<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/ll_tables"
        android:layout_width="28dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <color.measurement.com.from_cp20.widget.VerticalTextView

            android:id="@+id/vtv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/TabSwitcher_margin"
            android:padding="4dp"
            android:layout_weight="1"
            android:background="@drawable/switcher_title_back_selecter"
            android:clickable="true"
            android:focusable="true"
            app:direction="downtoup"
            app:text="反射率图"
            app:textColor="@android:color/white"
            app:textSize="@dimen/TabSwitcher_textsize"
            >
        </color.measurement.com.from_cp20.widget.VerticalTextView>

        <color.measurement.com.from_cp20.widget.VerticalTextView
            android:id="@+id/vtv_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/TabSwitcher_margin"
            android:padding="4dp"
            android:layout_weight="1"
            android:background="@drawable/switcher_title_back_selecter"
            android:clickable="true"
            android:focusable="true"
            app:direction="downtoup"
            app:text="色差图"
            app:textColor="@android:color/white"
            app:textSize="@dimen/TabSwitcher_textsize"
            >
        </color.measurement.com.from_cp20.widget.VerticalTextView>

        <color.measurement.com.from_cp20.widget.VerticalTextView
            android:id="@+id/vtv_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/TabSwitcher_margin"
            android:padding="4dp"
            android:layout_weight="1"
            android:background="@drawable/switcher_title_back_selecter"
            android:clickable="true"
            android:focusable="true"
            app:direction="downtoup"
            app:text="详情"
            app:textColor="@android:color/white"
            app:textSize="@dimen/TabSwitcher_textsize"
            >
        </color.measurement.com.from_cp20.widget.VerticalTextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fl_tables"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
    </LinearLayout>


</LinearLayout>