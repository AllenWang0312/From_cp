<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:elevation="8dp"
    android:translationZ="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/portrait"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@mipmap/caipu"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="未登录"
        android:id="@+id/name_nav_main"
        app:layout_constraintTop_toTopOf="@id/portrait"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@id/portrait"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/portrait"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/sign_nav_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@id/portrait"
        app:layout_constraintLeft_toLeftOf="@+id/name_nav_main"/>

    <TextView
        android:text="杭州"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_nav_main"
        android:textSize="30sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:text="星期四"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/city_nav_main"
        app:layout_constraintRight_toRightOf="@+id/city_nav_main"
        android:layout_marginTop="4dp"/>

    <TextView
        android:text="多云/4℃"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weather"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/day"
        app:layout_constraintRight_toRightOf="@+id/day"/>

</android.support.constraint.ConstraintLayout>
