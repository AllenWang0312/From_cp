<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="color.measurement.com.from_cp20.module.measure.lightcolor.v2.LightColor2Activity">

    <include layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <color.measurement.com.from_cp20.widget.CustomViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

        </color.measurement.com.from_cp20.widget.CustomViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/ll3_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/floatButtonsMargins"
                android:orientation="vertical"
              >

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="@dimen/test_fab_size"
                    android:layout_height="@dimen/test_fab_size"
                    android:src="@drawable/ic_save_white_24dp"

                    app:fabSize="auto"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="保存"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll4_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/floatButtonsMargins"
                android:orientation="vertical">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fb_check"
                    android:layout_width="@dimen/test_fab_size"
                    android:layout_height="@dimen/test_fab_size"
                    android:src="@drawable/ic_check_white_36dp"
                    app:fabSize="auto"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="测量"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
