<resources >
    <!--app theme-->

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- 欢迎页背景引用刚才写好的 -->
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
        <!-- <item name="android:windowIsTranslucent">true</item> --> <!-- 透明背景不要了 -->
    </style>

    <style name="AppTheme.Day" parent="AppTheme">

        <item name="colorPrimary">@color/zfb_Color_Primary</item>
        <item name="colorPrimaryDark">@color/zfb_Color_PrimaryDark</item>
        <item name="colorAccent">@color/zfb_Color_accent</item>

        <item name="android:textColorPrimary">@color/accent_black50</item>
        <item name="android:actionMenuTextColor">@android:color/black</item>
        <item name="android:colorBackground">@android:color/background_light</item>

        <!--所有系统级控件配色方案-->
        <!--<item name="android:colorControlNormal"></item>//普通状态-->
        <!--<item name="android:colorControlHighlight"></item>//涟漪颜色-->
        <!--<item name="android:colorControlActivated"></item>//trun 颜色-->

        <item name="android:windowContentTransitions">true</item>

        <!--<item name="android:toolbarStyle">@style/Toolbar.day</item>-->
        <!--<item name="android:dialogTheme">@style/dialog.day</item>-->
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>


    <style name="AppTheme.Night" parent="AppTheme">
        <item name="android:windowContentTransitions">true</item>

        <item name="colorPrimary">@color/accent_black50</item>
        <item name="colorPrimaryDark">@color/accent_black75</item>
        <item name="colorAccent">@color/accent_pink</item>

        <item name="android:textColorPrimary">@color/accent_white100</item>
        <item name="android:actionMenuTextColor">@color/accent_white100</item>
        <item name="android:colorBackground">@android:color/background_dark</item>

        <!--<item name="android:toolbarStyle">@style/Toolbar.night</item>-->
        <!--<item name="android:dialogTheme">@style/dialog.night</item>-->
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="text_check_light">
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
